{
	"schemaVersion": 1,
	"id": "block-event-separator",
	"version": "${version}",

	"name": "Block Event Separator",
	"description": "See the world one block event at a time.",
	"authors": [
		"Space Walker"
	],
	"contributors": [
		"G4me4u"
	],
	"contact": {
		"homepage": "https://modrinth.com/mod/block-event-separator",
		"sources": "https://github.com/SpaceWalkerRS/block-event-separator",
		"issues": "https://github.com/SpaceWalkerRS/block-event-separator/issues"
	},

	"license": "MIT Licence",
	"icon": "assets/block/event/separator/icon.png",

	"environment": "*",
	"entrypoints": {
		"main": [
			"block.event.separator.BlockEventSeparatorMod"
		],
		"g4mespeed": [
			"block.event.separator.g4mespeed.BlockEventSeparatorExtension"
		]
	},
	"mixins": [
		"block-event-separator.mixins.json"
	],

	"depends": {
		"minecraft": "1.20.x"
	},
	"breaks": {
		"g4mespeed": "<1.3.0"
	},
	"suggests": {
		"g4mespeed": ">=1.3.0"
	},

	"custom": {
		"modmenu": {
			"links": {
				"modmenu.discord": "https://discord.gg/EJC9zkX"
			}
		},
		"multiconnect": {
			"custom_payloads": {
				"allowed_clientbound": "block-event-separator:*",
				"allowed_serverbound": "block-event-separator:*"
			}
		}
	}
}
